{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Book Details</h1>
    {% if book is not null %}
        <div>
        <img src="{{ book.author.picture }}" alt="{{ book.author.username }}">
        <p><b>Title : </b> {{ book.title | upper }} </p>
        <p><b>Title : </b> {{ book.author.username }} </p>
        <p><b>Publication Date : </b> {{ book.publicationDate | date("d-m-Y") }} </p>
        <p><b>Enabled : </b> {{ book.enabled ? 'Yes': 'No' }} </p>
        </div><hr>
    {% else %}
        <p>Book Not Found.</p>
    {% endif %}
    <a href="{{path('app_book_list')}}">Return to List</a>
</div>
{% endblock %}
